{
  "name": "genesis-workflow-app",
  "version": "1.0.0",
  "description": "A modern workflow visualization platform built on Cloudflare Workers",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "pm2 start ecosystem.config.cjs",
    "dev:stop": "pm2 stop ecosystem.config.cjs",
    "dev:restart": "pm2 restart ecosystem.config.cjs",
    "dev:status": "pm2 status",
    "dev:clean": "pm2 kill && pkill -f 'vite|wrangler' || true",
    "dev:frontend": "vite dev --port 5175",
    "dev:backend": "wrangler d/cev --local --port 8787",
    "dev:backend:remote": "wrangler dev --remote --port 8787",
    "dev:backend:mock-ai": "wrangler dev --local --binding AI=mock-ai --port 8787",
    "test": "vitest",
    "test:unit": "vitest run tests/*.unit.test.ts",
    "test:components": "vitest run --project jsdom",
    "test:workers": "vitest run --project workers-unit",
    "test:integration": "vitest run --project workers-integration",
    "test:workflow": "vitest run tests/workflow*.test.ts",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:expensive": "vitest run tests/integration-cost-money.test.ts",
    "test:expensive:validate": "node scripts/validate-expensive-test-setup.js",
    "test:all": "npm run test && npm run test:e2e",
    "build": "wrangler deploy --dry-run",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "clean": "npm run dev:clean && rm -rf node_modules/.vite dist coverage test-results playwright-report",
    "types": "wrangler types",
    "format": "prettier --write .",
    "check": "prettier . --check && biome lint && tsc"
  },
  "keywords": [
    "cloudflare",
    "workflow",
    "visualization"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@cloudflare/vite-plugin": "1.1.1",
    "@cloudflare/vitest-pool-workers": "^0.8.27",
    "@cloudflare/workers-types": "^4.20250513.0",
    "@playwright/test": "^1.53.1",
    "@tailwindcss/vite": "^4.1.6",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.15.32",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/coverage-v8": "^3.1.3",
    "jsdom": "^26.1.0",
    "pm2": "^5.4.3",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.6",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "3.1.3",
    "wrangler": "^4.20.3"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.3.22",
    "@ai-sdk/react": "^1.2.12",
    "@ai-sdk/ui-utils": "^1.2.11",
    "@phosphor-icons/react": "^2.1.7",
    "@radix-ui/react-avatar": "^1.1.9",
    "@radix-ui/react-dropdown-menu": "^2.1.14",
    "@radix-ui/react-slot": "^1.2.2",
    "@radix-ui/react-switch": "^1.2.4",
    "@types/marked": "^6.0.0",
    "agents": "^0.0.86",
    "ai": "^4.3.15",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "immer": "^10.1.1",
    "marked": "^15.0.11",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.3.0",
    "zod": "^3.24.4",
    "zustand": "^5.0.5"
  }
}
